<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:mContext=".About">

    <TextView
        android:id="@+id/about_header_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="30dp"
        android:text="Ethio Origins App"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView

        android:id="@+id/about_version_tv"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Version"
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/version_number_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="1.0.1"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/last_update_tv"
android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Last Update"
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/update_number_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Thursday June-20-2019"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/about_app_tv"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="About App"
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        android:lineHeight="30dp"
        android:id="@+id/about_app_detail_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_margin="10dp"
        android:text="Ethio Origins is the place where you will find everything about Ethiopia right under your finger tips.
Be it Hotels or Restaurants or Tourist attraction sites found within the country."
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/follow_us_on_social_media_tv"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Follow Us on Social Media"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:layout_marginBottom="20dp"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >

        <ImageButton
            android:id="@+id/facbook_btn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/facebook_icon"

            android:layout_marginLeft="110dp"
            android:layout_marginRight="50dp"/>

        <ImageButton
            android:id="@+id/telegram_btn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/telegram_icon" />
    </LinearLayout>


</LinearLayout>